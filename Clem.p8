version 29
__lua__
function _init()
	c={
		x=rnd(128),
		y=rnd(128),
		speed=2
	}
	d={
		x=rnd(128),
		y=rnd(128),
		speed=4
	}
	f={
		x=rnd(128),
		y=rnd(128),	
	}	
end

function _update60()
	if (btn(➡️)) c.x+=1
	if (btn(⬅️)) c.x-=1
	if (btn(⬇️)) c.y+=1
	if (btn(⬆️)) c.y-=1	
end

function _draw()
	cls()
	spr(1,c.x,c.y)
	spr(2,d.x,d.y)
	spr(3,f.x,f.y)
end
